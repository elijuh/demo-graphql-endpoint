type Query {
    authors: [Author]
    authorById(id: ID!): Author
    books: [Book]
}

type Mutation {
    addBook(bookInput: BookInput): Book
}

input BookInput {
    title: String!
    publisher: String
    pageCount: Int!
    authorId: ID!
}

type Author {
    id: ID!
    name: String!
    books: [Book]
}

type Book {
    id: ID!
    title: String!
    publisher: String
    pageCount: Int!
    author: Author!
}